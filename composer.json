{
    "name": "rzproject/sandbox",
    "description": "rzproject sandbox",
    "autoload": {
        "psr-0":         {
            "": "src/"
        }
    },
    "require": {
        "php": ">=5.3.9",

        "twig/twig": "~1.12",
        "twig/extensions": "~1.0",

        "symfony/symfony": "2.6.9",
        "symfony/assetic-bundle": "~2.4",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",

        "sensio/distribution-bundle": "~2.3",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2.3",

        "doctrine/orm": "~2.4,<2.5",
        "doctrine/dbal": "~2.4",
        "doctrine/doctrine-bundle": "~1.4",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-fixtures-bundle": "~2.2",
        "doctrine/data-fixtures": "dev-master",

        "jms/serializer-bundle": "~0.13",

        "symfony-cmf/routing-bundle": "~1.1",

        "knplabs/gaufrette": "0.2.*@dev",
        "knplabs/knp-markdown-bundle": "~1.3",

        "friendsofsymfony/comment-bundle": "~2.0@dev",

        "sonata-project/easy-extends-bundle": "~2.1",
        "sonata-project/doctrine-extensions": "1.*",
        "sonata-project/intl-bundle": "~2.2",
        "sonata-project/core-bundle": "~2.2",

        "rmzamora/cache": "~1.0@dev",
        "rmzamora/cache-bundle": "~2.2",
        "rmzamora/notification-bundle": "2.4.1.*",
        "rmzamora/admin-bundle": "2.4.1.*",
        "rmzamora/block-bundle": "2.4.1.*",
        "rmzamora/user-bundle": "2.4.1.*",
        "rmzamora/media-bundle": "2.4.1.*",
        "rmzamora/doctrine-orm-admin-bundle": "2.4.1.*",
        "rmzamora/timeline-bundle": "2.4.1.*",
        "rmzamora/classification-bundle": "2.4.1.*",
        "rmzamora/seo-bundle": "2.0.1.*",
        "rmzamora/comment-bundle": "2.4.1.*",

        "rmzamora/jquery-bundle": "~1.11",
        "rmzamora/bootstrap-bundle": "2.3.*@dev",

        "rmzamora/news-bundle": "2.4.1.*",
        "rmzamora/formatter-bundle": "2.4.1.*",
        "rmzamora/page-bundle": "2.4.1.*",

        "rmzamora/knp-menu-bundle": "2.0.x-dev",
        "rmzamora/entity-audit-bundle": "0.*@dev",

        "rmzamora/doctrine-mongodb-admin-bundle": "2.4.*",

        "rz/formatter-bundle":  "1.1.1.*",
        "rz/admin-bundle":  "1.1.1.*",
        "rz/block-bundle": "1.2.1.*",
        "rz/user-bundle":  "1.1.1.*",
        "rz/page-bundle":  "1.2.1.*",
        "rz/media-bundle":  "1.2.1.*",
        "rz/news-bundle":  "1.4.1.*",
        "rz/doctrine-orm-admin-bundle":  "1.1.0.*",
        "rz/classification-bundle": "1.4.1.*",
        "rz/seo-bundle": "1.1.0.*",
        "rz/timeline-bundle": "1.1.0.*",
        "rz/search-bundle": "1.1.0.*",
        "rz/oauth-bundle": "1.2.0.*",
        "rz/user-security-bundle": "1.1.1.*",
        "rz/google-api-client-bundle" : "1.0.*",

        "liip/imagine-bundle": "0.9.*@stable",

        "michelf/php-markdown": "~1.4",
        "willdurand/faker-bundle": "~1.0",
        "videlalvaro/php-amqplib"  : "dev-master",
        "stof/doctrine-extensions-bundle": "~1.2",
        "stephpy/timeline-bundle": "~2.0",
        "white-october/pagerfanta-bundle": "~1.0",

        "incenteev/composer-parameter-handler": "~2.0",
        "nelmio/api-doc-bundle": "~2.4",
        "willdurand/hateoas-bundle": "0.2.*",
        "beberlei/DoctrineExtensions":"1.0.*@dev",

        "groupminteractionph/recommendation-bundle": "1.0.*@dev"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "guzzle/guzzle": "~3.0",
        "behat/behat": "~2.4",
        "behat/common-contexts": "1.2.*@dev",
        "behat/mink-extension": "~1.2",
        "behat/mink-goutte-driver": "~1.0",
        "behat/mink": "~1.5",
        "behat/mink-browserkit-driver": "~1.1",
        "behat/mink-selenium2-driver": "~1.1",
        "matthiasnoback/symfony-config-test": "~0.4",
        "matthiasnoback/symfony-dependency-injection-test": "~0.7",
        "fabpot/goutte": "~1.0"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-create-project-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php load_data.php"
        ]
    },

    "config": {
        "bin-dir": "bin",
        "process-timeout" : 4000,
        "github-protocols": ["https", "git"]
    },

    "repositories": [
      {
        "type": "git",
        "url":  "git@gmi-bitbucket.com:groupminteractionph/recommendation-bundle.git"
      }
    ],

    "minimum-stability": "dev",

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "branch-alias": {
            "dev-1.3.x": "1.3.x-dev"
        },
        "incenteev-parameters": [{
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_driver":   "DATABASE_DRIVER",
                "database_host":     "DATABASE_HOST",
                "database_name":     "DATABASE_NAME",
                "database_user":     "DATABASE_USER",
                "database_password": "DATABASE_PASSWORD",
                "mailer_transport":  "MAILER_TRANSPORT",
                "mailer_host":       "MAILER_HOST",
                "mailer_user":       "MAILER_USER",
                "mailer_password":   "MAILER_PASSWORD",

                "sonata_media.cdn.host": "SONATA_MEDIA_CDN_HOST"
            }
        }]
    }
}
